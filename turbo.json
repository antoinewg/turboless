{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "test:watch": {},
    "lint": {},
    "lint:fix": {},
    "check:updates": {},
    "check:updates:u": {},
    "dev": {
      "cache": false
    },
    "package": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "cache": false
    },
    "deploy:staging": {
      "dependsOn": [
        "package"
      ],
      "cache": false
    },
    "deploy:production": {
      "dependsOn": [
        "package"
      ],
      "cache": false
    }
  }
}
